{% extends "_layout" %}

{% block content %}
<div class="entry {{ entry.section.handle }}-{{ entry.type }}">
{% if entry.type == 'link' %}
	<h2><a href="{{ entry.linkUrl }}">{{ entry.title }} &neArr;</a></h2>
{% else %}
	<h2><a href="{{ entry.url }}">{{ entry.title }}</a></h2>
	<p class="post-date">{{ entry.postDate | date('M d, Y') }}</p>
{% endif %}
  {% block itemContent %}
  	{% if entry.body %}
	<div class="entry content">
		{% include "matrix" with {"matrix": entry.body} %}
    </div>
  	{% endif %}
  {% endblock %}
</div>
{% endblock %}